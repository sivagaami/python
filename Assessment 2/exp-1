import re

string =input("Enter the string:")

uppercase_characters = re.findall(r"[A-Z]", string)
lowercase_characters = re.findall(r"[a-z]", string)
numerical_characters = re.findall(r"[0-9]", string)
special_characters = re.findall(r"[, .!?]", string)
whitespaces_characters = re.findall(r"[' ']", string)

print("The no. of uppercase characters in the string is", len(uppercase_characters))
print("The no. of lowercase characters in the string is", len(lowercase_characters))
print("The no. of numerical characters in the string is", len(numerical_characters))
print("The no. of special characters in the string is", len(special_characters))
print("The no. of whitespace in the string is", len(whitespaces_characters))
